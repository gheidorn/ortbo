{
  "name": "Ortbo",
  "description": "Engineering team management and skill visualization system",
  "repository": "https://github.com/yourusername/ortbo",
  "keywords": ["django", "python", "skill-management", "team-organization"],
  "addons": [
    "heroku-postgresql:hobby-dev"
  ],
  "env": {
    "SECRET_KEY": {
      "description": "A secret key for Django's cryptographic signing",
      "generator": "secret"
    },
    "DEBUG": {
      "description": "Enable or disable Django debug mode",
      "value": "False"
    },
    "ALLOWED_HOSTS": {
      "description": "Comma-separated list of allowed hosts",
      "value": ".herokuapp.com"
    }
  },
  "buildpacks": [
    {
      "url": "heroku/python"
    }
  ],
  "scripts": {
    "postdeploy": "python manage.py migrate && python add_example_data.py"
  }
}